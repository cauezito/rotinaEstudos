{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}
<form class="mt-3" method="post" action="/study/config/newCategory">  
  <div class="col-xs-12 col-md-7">
      <h4>Nova categoria de estudo:</h4>
      <label for="name">Nome:</label>
      <input type="text" name="name">
      <label for="name">Slug:</label>
      <input type="text" name="slug">
      <button class="btn btn-success btn-sm" type="submit">Criar</button>
  </div>
</form>
<div class="row">
    <div class="col-12">
        <h4>Categorias jรก cadastradas:</h4>
        {{#each categories}}
            <p>{{name}} - {{slug}}</p>
        {{/each}}
    </div>
</div>